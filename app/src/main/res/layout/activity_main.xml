<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.moveon.test.MainActivity">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter Authentication Using Direct REST API Without Any Library "
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created By: Swati Kurra "
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaible At: GitHub URL"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/consumer_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:hint="Enter consumer key here"

            />

        <EditText
            android:hint="Enter Consumer secret here"
            android:id="@+id/consumer_secret"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            />


        <Button
            android:id="@+id/authorize"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:text="Authorize"/>

        <EditText
            android:hint="Enter Pin here copied from Browser"
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/autheticate_retweet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:text="Authenticate and Retweet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/status"
            android:textColor="@color/colorRed"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
